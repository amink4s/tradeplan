# Firebase Configuration
# JSON string containing Firebase config object
VITE_FIREBASE_CONFIG={"apiKey":"...","authDomain":"...","projectId":"...","storageBucket":"...","messagingSenderId":"...","appId":"..."}

# Application ID for Firestore collections
VITE_APP_ID=trade-plan-v0

# IPFS Storage Configuration (choose one provider)
# Option 1: Storj (accepts crypto payments - recommended)
VITE_STORJ_ACCESS_GRANT=your_storj_access_grant
VITE_STORJ_BUCKET=your_bucket_name

# Option 2: 4EVERLAND (accepts crypto payments)
VITE_4EVERLAND_API_KEY=your_4everland_api_key
VITE_4EVERLAND_BUCKET=your_bucket_name

# Option 3: web3.storage / NFT.Storage
VITE_WEB3_STORAGE_TOKEN=your_web3_storage_token

# NFT Contract Address on Base chain (for minting commitments)
VITE_NFT_CONTRACT_ADDRESS=0x_your_deployed_contract_address

# Base Chain RPC URL (optional - uses public RPC if not set)
VITE_BASE_RPC_URL=https://mainnet.base.org
